<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Find A Task</h3>
  <form action="/tasks/find" method="get">

    {{! Title Input }}
    <div class="mb-3">
      <label for="title">Write a title:</label>
      <input
        id="title"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="title"
        placeholder="Title"
        autofocus
      />
    </div>
    <button class="btn btn-success" type="submit">Find</button>
  </form>
</div>